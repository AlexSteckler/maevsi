{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@nuxt/types-edge",
      "@nuxtjs/color-mode",
      "@nuxtjs/google-analytics",
      "@nuxtjs/i18n",
      "@nuxtjs/moment",
      "@pinia/nuxt",
      "jest",
      "node",
    ],
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "extends": "./.nuxt/tsconfig.json",
  "vueCompilerOptions": {
    "target": 2.7,
  }
}
